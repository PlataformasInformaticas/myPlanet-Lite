<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dashboard_card_inner_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/postDetailAvatar"
            android:layout_width="@dimen/dashboard_team_badge_size"
            android:layout_height="@dimen/dashboard_team_badge_size"
            android:background="@drawable/avatar_placeholder_background"
            android:clipToOutline="true"
            android:contentDescription="@string/dashboard_avatar_content_description"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/postDetailAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold"
                tools:text="José Luis" />

            <TextView
                android:id="@+id/postDetailMetadata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.72"
                android:textColor="?attr/colorOnSurface"
                android:textSize="12sp"
                tools:text="@lasmuchedumbres • 22h" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/postDetailOverflowMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/dashboard_post_actions_menu_content_description"
            android:padding="8dp"
            android:src="@drawable/ic_more_vert_24"
            android:visibility="gone"
            app:tint="?attr/colorOnSurface" />

    </LinearLayout>

    <TextView
        android:id="@+id/postDetailBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="?attr/colorOnSurface"
        android:textSize="14sp"
        tools:text="Buenas tardes Guatemala. Vean esto..." />

    <LinearLayout
        android:id="@+id/postDetailImagesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:visibility="gone" />

    <TextView
        android:id="@+id/postDetailCommentsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/dashboard_post_detail_comments_title"
        android:textColor="?attr/colorOnSurface"
        android:textStyle="bold"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/postDetailCommentsEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/dashboard_post_detail_comments_empty"
        android:textColor="?attr/colorOnSurface"
        android:textSize="14sp"
        android:visibility="gone"
        tools:visibility="visible" />

    <View
        android:id="@+id/postDetailDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dashboard_post_divider_height"
        android:layout_marginTop="12dp"
        android:background="@color/dashboard_post_divider"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>
