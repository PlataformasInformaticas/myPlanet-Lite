<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="24dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/dashboardTeamsRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/dashboardTeamsScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:fillViewport="true"
            android:paddingBottom="@dimen/dashboard_content_bottom_spacing"
            android:paddingTop="@dimen/dashboard_content_top_spacing">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/dashboard_horizontal_padding"
                android:paddingEnd="@dimen/dashboard_horizontal_padding"
                android:showDividers="middle"
                android:divider="@drawable/dashboard_divider"
                android:dividerPadding="@dimen/dashboard_card_spacing">

                <LinearLayout
                    android:id="@+id/myTeamsSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/myTeamsTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:text="@string/dashboard_teams_my_title"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:id="@+id/myTeamsDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dashboard_card_spacing"
                        android:text="@string/dashboard_teams_my_description"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:id="@+id/selectedTeamHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dashboard_card_spacing"
                        android:text="@string/dashboard_teams_select_team_hint"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/teamsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:showDividers="middle"
                        android:divider="@drawable/dashboard_divider"
                        android:dividerPadding="@dimen/dashboard_card_spacing" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/exploreTeamsSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingTop="@dimen/dashboard_card_spacing">

                    <TextView
                        android:id="@+id/exploreTeamsTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:text="@string/dashboard_teams_explore_title"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:id="@+id/exploreTeamsDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/dashboard_teams_explore_description"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?attr/colorOnSurface" />

                    <LinearLayout
                        android:id="@+id/exploreTeamsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:showDividers="middle"
                        android:divider="@drawable/dashboard_divider"
                        android:dividerPadding="@dimen/dashboard_card_spacing"
                        android:paddingTop="@dimen/dashboard_card_spacing" />

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <ProgressBar
        android:id="@+id/teamsLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/teamsEmptyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingStart="@dimen/dashboard_horizontal_padding"
        android:paddingEnd="@dimen/dashboard_horizontal_padding"
        android:visibility="gone"
        android:textColor="?attr/colorOnSurface"
        android:textSize="16sp" />

</FrameLayout>
