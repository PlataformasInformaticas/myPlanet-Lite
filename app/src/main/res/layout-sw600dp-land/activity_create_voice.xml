<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/createVoiceToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/F6F6F6"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.MaterialComponents.ActionBar" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/createVoiceProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/createVoiceScroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:background="@color/white"
            android:overScrollMode="ifContentScrolls">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="34dp"
                android:paddingEnd="34dp"
                android:paddingTop="18dp"
                android:paddingBottom="22dp">

                <TextView
                    android:id="@+id/createVoiceEditorLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="@string/create_voice_editor_label"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/create_voice_hint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/createVoiceInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top|start"
                        android:imeOptions="flagNoEnterAction"
                        android:inputType="textCapSentences|textMultiLine"
                        android:minLines="9"
                        android:overScrollMode="always"
                        android:textColor="?attr/colorOnSurface" />
                </com.google.android.material.textfield.TextInputLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:overScrollMode="never">

                    <LinearLayout
                        android:id="@+id/markdownToolbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/markdownBoldButton"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            android:paddingStart="9dp"
                            android:paddingEnd="9dp"
                            android:contentDescription="@string/create_voice_format_bold_description"
                            app:icon="@drawable/ic_format_bold_24"
                            app:iconGravity="textStart"
                            app:iconTint="@color/C6F6F6F"
                            app:iconPadding="0dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/markdownItalicButton"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            android:paddingStart="9dp"
                            android:paddingEnd="9dp"
                            android:contentDescription="@string/create_voice_format_italic_description"
                            app:icon="@drawable/ic_format_italic_24"
                            app:iconGravity="textStart"
                            app:iconTint="@color/C6F6F6F"
                            app:iconPadding="0dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/markdownHeadingButton"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            android:paddingStart="9dp"
                            android:paddingEnd="9dp"
                            android:contentDescription="@string/create_voice_format_heading_description"
                            app:icon="@drawable/ic_format_heading_24"
                            app:iconGravity="textStart"
                            app:iconTint="@color/C6F6F6F"
                            app:iconPadding="0dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/markdownBulletButton"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            android:paddingStart="9dp"
                            android:paddingEnd="9dp"
                            android:contentDescription="@string/create_voice_format_bullet_description"
                            app:icon="@drawable/ic_format_list_bulleted_24"
                            app:iconGravity="textStart"
                            app:iconTint="@color/C6F6F6F"
                            app:iconPadding="0dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/markdownNumberedButton"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            android:paddingStart="9dp"
                            android:paddingEnd="9dp"
                            android:contentDescription="@string/create_voice_format_numbered_description"
                            app:icon="@drawable/ic_format_list_numbered_24"
                            app:iconGravity="textStart"
                            app:iconTint="@color/C6F6F6F"
                            app:iconPadding="0dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/markdownQuoteButton"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            android:paddingStart="9dp"
                            android:paddingEnd="9dp"
                            android:contentDescription="@string/create_voice_format_quote_description"
                            app:icon="@drawable/ic_format_quote_24"
                            app:iconGravity="textStart"
                            app:iconTint="@color/C6F6F6F"
                            app:iconPadding="0dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/markdownLinkButton"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            android:paddingStart="9dp"
                            android:paddingEnd="9dp"
                            android:contentDescription="@string/create_voice_format_link_description"
                            app:icon="@drawable/ic_insert_link_24"
                            app:iconGravity="textStart"
                            app:iconTint="@color/C6F6F6F"
                            app:iconPadding="0dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/markdownImageButton"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            android:paddingStart="9dp"
                            android:paddingEnd="9dp"
                            android:contentDescription="@string/create_voice_format_image_description"
                            app:icon="@drawable/ic_insert_photo_24"
                            app:iconGravity="textStart"
                            app:iconTint="@color/C6F6F6F"
                            app:iconPadding="0dp" />

                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/createVoicePreviewLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/create_voice_preview_label"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/createVoicePreviewText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:textColor="?attr/colorOnSurface"
                    android:textIsSelectable="true" />

                <LinearLayout
                    android:id="@+id/createVoicePreviewImages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical"
                    android:visibility="gone" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/createVoiceSubmitButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/create_voice_primary_action" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
